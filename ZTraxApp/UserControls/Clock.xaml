<UserControl x:Class="ZTraxApp.UserControls.Clock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZTraxApp.UserControls" xmlns:viewmodels="clr-namespace:ZTraxApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ClockViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="5">
        <TextBlock Text="{Binding Path=Week}" FontSize="30" FontFamily="Consolas" Foreground="White" TextAlignment="Center" />
        <TextBlock Text="{Binding Path=Time}" FontSize="30" FontFamily="Consolas" Foreground="White" TextAlignment="Center" />
        <TextBlock Text="{Binding Path=Date}" FontSize="30" FontFamily="Consolas" Foreground="White" TextAlignment="Center" />
    </StackPanel>
</UserControl>
